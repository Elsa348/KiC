<p id="notice"><%= notice %></p>

<h1>Listing Activities</h1>

<table>
  <thead>
    <tr>
      <th>Id activity</th>
      <th>Id artisan</th>
      <th>Metier</th>
      <th>Prestations</th>
      <th>Description</th>
      <th>Images</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @activities.each do |activity| %>
      <tr>
        <td><%= activity.id_activity %></td>
        <td><%= activity.id_artisan %></td>
        <td><%= activity.metier %></td>
        <td><%= activity.prestations %></td>
        <td><%= activity.description %></td>
        <td><%= activity.images %></td>
        <td><%= link_to 'Show', activity %></td>
        <td><%= link_to 'Edit', edit_activity_path(activity) %></td>
        <td><%= link_to 'Destroy', activity, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

