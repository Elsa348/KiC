

    <!-- CARROUSSEL -->
    <div id="myCarousel" class="carousel slide" data-ride="carousel">
      <!-- Indicators -->
      <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
      </ol>

      <!-- Wrapper for slides -->
      <!-- CHARGEMENT DES IMAGES -->
      <div class="carousel-inner" role="listbox">
        <div class="item active">
          <%= image_tag 'photo1.jpg' %>
        </div>

        <div class="item">
          <%= image_tag 'photo2.jpg' %>
        </div>

        <div class="item">
           <%= image_tag 'photo3.jpg' %>
        </div>

        <div class="item">
          <%= image_tag 'photo4.jpg' %>
        </div>
      </div>

      <!-- Left and right controls -->
      <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
      </a>
      <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
      </a>
    </div>
    <!-- FIN CARROUSSEL -->

    <!-- DEBUT RECHERCHE ARTISAN -->
    <div class="field search">
      <%= search_form_for @q, url: root_path do |f| %>

      <!-- #Search if the name field contains...-->
      <div class="searchlib">
      <%= f.label :job_cont, "Rechercher une activité" %>
      </div>      <%= f.search_field :job_cont %>

      <%= f.submit 'Rechercher', :class => 'btn btn-default btn-md  searchbtn'  %>
      <% end %>
    </div>

    <div>

      <% @activities.each do |activity| %>
      <h2><%= activity.job %></h2>
        <ul>
          <% activity.users.each do |user| %>
            <li><%= user.lastname %> <%= user.firstname %></li>
          <% end %>
        </ul>
      <% end %>

    </div>
    <!-- FIN RECHERCHE ARTISAN -->

    <br>
    <!-- CARTE GMAPS -->
    <div class="field form">
      <%= form_for(:search) do |f| %>
        <%= f.label :Localisation %><br>
        <%= f.text_field :location %>
      <% end %>
    </div>
    <div id='gmaps-error'></div>
    <div id='gmaps-canvas'></div>
    <!-- FIN CARTE GMAPS -->
    <br>

    <!-- DEBUT ICONES PRESENTATION -->
    <div class="row marketing-block">
      <div class="col-xs-4 col-sm-4 text-center">
        <span class="glyphicon glyphicon-user marketing" aria-hidden="true"></span>
        <p> Artisans sérieux et vérifiés</p>
      </div>
      <div class="col-xs-4 col-sm-4 text-center">
        <span class="glyphicon glyphicon-ok marketing" aria-hidden="true"></span>
        <p> Avis fiables et contrôlés</p>
      </div>
      <div class="col-xs-4 col-sm-4 text-center">
        <span class="glyphicon glyphicon-thumbs-up marketing" aria-hidden="true"></span>
        <p> Contact et devis simplifiés</p>
      </div>
    </div>
    <!-- FIN ICONES PRESENTATION -->
