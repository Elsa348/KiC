<p id="notice"><%= notice %></p>

<div class="row ">
  <div class="col-xs-12 .col-md-8">
    <h1 class="title">Avis & notes</h1>
  </div>
</div>
 <% if @reviews.size > 0 %>
<div class="row ">
  <div class="col-xs-6 col-sm-4 text-center review">
            <p class="note workernote"> <%= average_rating(@reviews) %></p><p class="note notetotal">/5</p>
         <% average_rating(@reviews).times do %>
           <span class="glyphicon glyphicon-star" aria-hidden="true"></span>
         <% end %>
         <% empty_stars(@reviews).times do %>
           <span class="glyphicon glyphicon-star-empty" aria-hidden="true"></span>
         <% end %>
   </div>
   <div class="col-xs-6 col-sm-4 text-center">
     <%= link_to "Donnez votre avis", new_review_path, :class => "btn btn-default btn-md" %>
   </div>
</div>
<div class="row ">
  <div class="col-xs-12 col-md-8">
<table class="table tablecomment">
  <tbody>
    <% @reviews.each do |review| %>
      <tr>
        <td>
         <div class="note comment"> <%= review.rating %> <p class="note notetotal">/5</p></div>
         <% review.rating.times do %>
           <span class="glyphicon glyphicon-star" aria-hidden="true"></span>
         <% end %>
         <% review.empty_stars.times do %>
           <span class="glyphicon glyphicon-star-empty" aria-hidden="true"></span>
         <% end %>
          </br>
          <div class="comment" > <%= review.comment %> </div>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

</div>
</div>
<% else %>
    <div class="row ">
       <div class="col-xs-6 col-sm-4 text-center">
         <%= link_to "DÃ©posez un avis", new_review_path, :class => "btn btn-default btn-md" %>
       </div>
    </div>
<% end %>
